{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "@nuxt/types", "jest", "webpack-env"]
  },
  "exclude": ["node_modules", "dist", "templates/plugin.js"]
}
